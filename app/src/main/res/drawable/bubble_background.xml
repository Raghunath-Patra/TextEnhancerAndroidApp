<?xml version="1.0" encoding="utf-8"?>
<!-- Replace bubble_background.xml with this enhanced version -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item
        android:left="0dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Main background -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bubble_background" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/bubble_border" />
        </shape>
    </item>
</layer-list>