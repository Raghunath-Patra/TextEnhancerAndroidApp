<?xml version="1.0" encoding="utf-8"?>
<!-- For values/styles.xml -->
<resources>
    <!-- Enhancement Type Button Style -->
    <style name="EnhancementTypeButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <!-- Main Action Button Style -->
    <style name="MainActionButton" parent="Widget.Material3.Button">
        <item name="android:textSize">11sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Copy/Replace Button Style -->
    <style name="SecondaryActionButton" parent="Widget.Material3.Button.TonalButton">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Close Button Style -->
    <style name="CloseButton" parent="Widget.Material3.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="backgroundTint">@color/close_button_color</item>
    </style>
</resources>